<p id="notice"><%= notice %></p>


<table class="table table-hover">
  <thead>
    <th>会社名</th>
    <th>住所</th>
    <th>電話番号</th>
    <th>ファックス</th>
    <th>Webサイト</th>
  </thead>

  <tbody>
    <tr>
    <td><%= @company.name %></td>
    <td><%= @company.address %></td>
    <td><%= @company.tel %></td>
    <td><%= @company.fax %></td>
    <td><%= @company.url %></td>
    </tr>
  </tbody>
</table>

<%= form_for Comment.new ,url: comment_company_path(@company) do |f| %>
<%= f.text_area :body %><br>
<%= f.submit '投稿' %>
<% end %>

<br>


<%= link_to '編集', edit_company_path(@company), class:'btn btn-default' %>
