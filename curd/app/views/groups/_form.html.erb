<%= form_for([@company, @group]) do |f| %>
  <% if @group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@group.errors.count, 'error') %> saved </h2>

      <ul>
      <% @group.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :部署名 %><br>
    <%= f.text_field :name %>
  </div>
  <div class="actions">
    <%= f.submit "更新する"%>
  </div>
<% end %>
